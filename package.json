{
  "name": "generatetextforemail",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./electron/electron.js",
  "scripts": {
    "dev": "vite",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "build": "vite build && electron-builder build --win",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron": "electron . --trace-warnings",
    "electron:start": "concurrently \"npm run dev\" \"npm run electron\"",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.NPPA.generatetextforemail",
    "productName": "Email Text Generator",
    "directories": {
      "buildResources": "electron/assets",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "electron/assets/logo_cropped.ico"
    },
    "buildDependenciesFromSource": true,
    "asar": true,
    "extraResources": [
      {
        "from": "./public/main.config.json",
        "to": "main.config.json"
      },
      {
        "from": "./public/family.config.json",
        "to": "family.config.json"
      },
      {
        "from": "./public/relocation.config.json",
        "to": "relocation.config.json"
      },
      {
        "from": "./public/site.config.json",
        "to": "site.config.json"
      },
      {
        "from": "./public/responseLetter.config.json",
        "to": "responseLetter.config.json"
      }
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.1",
    "@reduxjs/toolkit": "^2.2.1",
    "bootstrap": "^5.3.2",
    "electron-is-dev": "^3.0.1",
    "html-react-parser": "^5.1.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^28.3.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "vite": "^5.1.0",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
